generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String
  password String
  task     Task[]
}

model Task {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  completed Boolean @default (false)
  userId      Int
  user        User   @relation(fields: [userId], references: [id])
}
